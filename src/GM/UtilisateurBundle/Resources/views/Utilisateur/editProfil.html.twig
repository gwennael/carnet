{% extends "GMCarnetBundle::layout.html.twig" %}

{% block body %}

	<br/>
	<br/>
	
	<div class="row col-lg-offset-0">
		<h1>Modification du profil</h1>
	</div>
	
	<br/>
	<div class="well">
	
		<br/>
		
		
		{{ form_start(formulaire, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(formulaire) }}
		
		<div class="form-group">
			{{ form_label(formulaire.email, "E-mail", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.email, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.email) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.adresse, "Adresse", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.adresse, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.adresse) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.codePostal, "Code postal", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.codePostal, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.codePostal) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.ville, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.ville, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.ville) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.telephone, "Téléphone fixe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.telephone, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.telephone) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.portable, "Téléphone portable", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.portable, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.portable) }}
		</div>
		
		<div class="form-group">
			{{ form_label(formulaire.site, "Site web", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			
			<div class="col-sm-4">
				{{ form_widget(formulaire.site, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_errors(formulaire.site) }}
		</div>
		
		<div class="form-group">
			<div class="col-sm-4 col-sm-offset-3">
				{{ form_widget(formulaire.Sauvegarder, {'attr': {'class': 'btn btn-primary'}}) }}
			</div>
		</div>
		
		{{ form_rest(formulaire) }}	
		
		<br/>
		<br/>
		
		<a class="btn btn-primary col-lg-offset-0" href="{{ path('gm_utilisateur_profil')}}">
			Annuler
		</a>
	</div>

{% endblock %}