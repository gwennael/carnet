{% extends "GMCarnetBundle::layout.html.twig" %}

{% block title %}
  Supprimer - {{ parent() }}
{% endblock %}

{% block body %}

	<br/>
	<br/>

	<div class="row col-lg-offset-3">
		<h1>Supprimer des contacts</h1>
	</div>

	<br/>
	
	
	<div class="row">
		<div class="col-lg-3">
			<a class="btn btn-info col-lg-offset-0" href="{{ path('gm_carnet_liste')}}">
				Afficher le carnet
			</a>
			<br/>
			<br/>
			<a class="btn btn-primary col-lg-offset-0" href="{{ path('gm_carnet_ajouter')}}">
				Ajouter un contact
			</a>
			<br/>
			<br/>
			<a class="btn btn-primary col-lg-offset-0" href="{{ path('gm_carnet_listeSupprimer')}}">
				Supprimer des contacts
			</a>
		</div>
		
		<div class="well col-lg-9">			
			{% if listeCarnet|length > 0 %}
				<div>
					<h4>Cochez le(s) contacts devant être supprimé(s) :</h4>
					<br/>
					<form action="{{ path('gm_carnet_confirmSupprimer') }}" method="post">
						<table>
							{% for carnetListe in listeCarnet %}
								<tr>
									<td>
										<input type="checkbox" name="suppression[]" value="{{ carnetListe }}"/>
									</td>
									<td>
										{{ carnetListe }}
									</td>
								</tr>
							{% endfor %}
						</table>
						
						<br/>
						
						<input class="btn btn-danger"type="submit" value="Supprimer" />
					</form>
				</div>
			{% else %}
				<h4>Aucun contact à supprimer !</h4>
			{% endif %}
		</div>
	</div>

{% endblock %}
