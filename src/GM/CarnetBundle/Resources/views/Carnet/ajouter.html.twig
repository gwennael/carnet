{% extends "GMCarnetBundle::layout.html.twig" %}

{% block title %}
  Ajouter - {{ parent() }}
{% endblock %}

{% block body %}

	<br/>
	<br/>
	
	<div class="row col-lg-offset-3">
		<h1>Ajouter un contact</h1>
	</div>
	
	<br/>

	<div class="row">		
		
		<div class="col-lg-3">
			<a class="btn btn-info col-lg-offset-0" href="{{ path('gm_carnet_liste')}}">
				Afficher le carnet
			</a>
			<br/>
			<br/>
			<a class="btn btn-primary col-lg-offset-0" href="{{ path('gm_carnet_ajouter')}}">
				Ajouter un contact
			</a>
			<br/>
			<br/>
			<a class="btn btn-primary col-lg-offset-0" href="{{ path('gm_carnet_listeSupprimer')}}">
				Supprimer des contacts
			</a>
		</div>
		
		<div class="well col-lg-9">	
			
			{% for flashMessage in app.session.flashbag.get('notice') %}
				<div class="flash-notice alert alert-success">
					{{ flashMessage }}
				</div>
			{% endfor %}
			
			{% for flashMessage in app.session.flashbag.get('fail') %}
				<div class="flash-notice alert alert-info">
					{{ flashMessage }}
				</div>
			{% endfor %}
			
			{% for flashMessage in app.session.flashbag.get('erreur') %}
				<div class="flash-notice alert alert-danger">
					{{ flashMessage }}
				</div>
			{% endfor %}
			
			<h4>Saisissez le contact:</h4>
			
			<br/>

			{{ form_start(formulaire, {'attr': {'class': 'form-horizontal'}}) }}
			{{ form_errors(formulaire) }}
			
			<div class="form-group">
				
				{{ form_errors(formulaire.name) }}
				
				<div class="col-sm-4">
					{{ form_widget(formulaire.name, {'attr': {'class': 'form-control', 'id': 'name', 'placeholder': "Votre contact..."}}) }}
				</div>
			</div>		
			
			<div class="form-group">
				<div class="col-sm-4">
					{{ form_widget(formulaire.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
				</div>
			</div>
			
			{{ form_rest(formulaire) }}	
			
			<br/>
		</div>
	</div>

{% endblock %}
